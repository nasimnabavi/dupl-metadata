<?php
class myClass
{
    private $name;
    public function foo() {
        echo 'Foo';
    }
    public function baz() { }
    public function addsAnotherMethod() { }
    public function bar()
    {
        echo 'Adds another function';
        $a = true;
        if($a === true){
            $a = false;
            if($a === false){$a = true;}
            if($a === true){$a = false;}
        }
        return true; // and another coding style issue
    }
    public function myBar() 
    {
        echo 'hallo! I hope you work!';
        if(true) {
            echo 'hello true';
            if(false){
                echo 'hello false';
                if (true) {
                    echo 'h again';
                }
            }
        }
        return true;
    }
    
    private function myPrivateFunc(){if(true){echo 'hallo';}return true;}
    
    
}

